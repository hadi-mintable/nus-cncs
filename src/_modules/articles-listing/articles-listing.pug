

include ../article-card/article-card

mixin articles-listing(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''

  .fl-row.fl-row-fixed-width.fl-row-bg-none
    section.articles-listing
      div(class="articles-listing__search")
        input(type="search" name="s" placeholder="Search Research")
        button#submitSearch
          svg.svg-inline--fa.fa-search.fa-w-16.collapsed(data-toggle='collapse' data-target='#search-collapse' href='#' aria-hidden='true' focusable='false' data-prefix='fa' data-icon='search' role='img' xmlns='http://www.w3.org/2000/svg' viewbox='0 0 512 512' data-fa-i2svg='')
            path(fill='currentColor' d='M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z')
      .articles-listing__wrapper
        button#mobileTrigger Filter Research
        .articles-listing__sidebar
          h3.title Filter by
          .articles-listing__list
            span Research Areas
            ul
              each area in site.data.researchAreasSidebar
                li
                  label
                    input(type="radio" data-value= area.value name="researchCategory")
                    span= area.label
          .articles-listing__list
            span Content Type
            ul
              each area in site.data.contentTypeSidebar
                li
                  label
                    input(type="radio" name="contentType")
                    span= area.label
        ul.articles-listing__articles
          each article in site.data.articles
            +article-card({
              article: article
            })